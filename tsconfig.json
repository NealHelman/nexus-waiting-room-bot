{  
  "compilerOptions": {    
    "target": "ES2022",    
    "module": "NodeNext",    
    "moduleResolution": "NodeNext",    
    "lib": ["ES2022"],    
    "rootDir": "src",    
    "outDir": "dist",    
    "esModuleInterop": true,    
    "forceConsistentCasingInFileNames": true,    
    "resolveJsonModule": true,    
    "strict": true,    
    "skipLibCheck": true  
  },  
  "include": ["src/**/*.ts"]
}